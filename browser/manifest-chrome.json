{
  "name": "TimeFlow",
  "description": "View your time spent on the web with this minimalistic browser extension",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/favicon/16.png",
      "48": "assets/favicon/48.png",
      "128": "assets/favicon/128.png"
    }
  },
  "icons": {
    "16": "assets/favicon/16.png",
    "48": "assets/favicon/48.png",
    "128": "assets/favicon/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["public/script.js"]
    }
  ]
}
