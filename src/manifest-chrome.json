{
  "name": "Chrome",
  "description": "View your web usage with this simple to use Firefox add-on",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "favicon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net; object-src 'self';"
}