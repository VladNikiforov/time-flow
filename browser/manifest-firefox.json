{
  "name": "TimeFlow",
  "description": "View your web usage with this minimal Firefox extension",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "favicon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["public/script.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net; object-src 'self';"
}
