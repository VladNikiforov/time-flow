{
  "name": "TimeFlow - Web Usage Time Tracker",
  "description": "View your time spent on the web with this minimalistic browser extension",
  "version": "1.2.1",
  "manifest_version": 2,
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "type": "module",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/favicon/16.png",
      "48": "assets/favicon/48.png",
      "128": "assets/favicon/128.png"
    }
  },
  "icons": {
    "16": "assets/favicon/16.png",
    "48": "assets/favicon/48.png",
    "128": "assets/favicon/128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self';"
}
